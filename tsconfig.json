{
	"compilerOptions": {
		"target": "ES2020",

		"module": "CommonJS",
		"typeRoots": ["../node_modules/@types"],

		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"resolveJsonModule": true,
		"outDir": "./dist",
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"pretty": true
	},
	"include": ["src/**/*"]
}
